<Window x:Class="Collectatron.OpenOrNewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Collectatron"
        mc:Ignorable="d"
        Title="Collectatron" Height="130" Width="400" ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">Open a collection or start a new one?</Label>

        <Button x:Name="OpenButton" Grid.Column="0" Grid.Row="1" Margin="5" Click="OpenButton_OnClick">Open</Button>
        <Button x:Name="NewButton" Grid.Column="1" Grid.Row="1" Margin="5" Click="NewButton_OnClick">New</Button>
    </Grid>
</Window>
